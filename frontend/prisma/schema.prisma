generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model mailnumber {
  id     Int    @id @default(autoincrement())
  email  String @unique(map: "mailNumber_email_key")
  mailAuthNumber String
}

model mainnotices {
  id            Int      @id @default(autoincrement())
  category      String
  title         String
  content       String?
  published     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
  viewCount     Int
  recomendCount Int
  authorId      Int
  user          user     @relation(fields: [authorId], references: [id], map: "MainNotices_authorId_fkey")

  @@index([authorId], map: "MainNotices_authorId_fkey")
}

model notices {
  id        Int      @id @default(autoincrement())
  title     String
  category  String
  createdAt DateTime
  link      String
}

model user {
  id          Int           @id @default(autoincrement())
  email       String        @unique(map: "User_email_key")
  password    String
  privacy     Boolean
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now())
  mainnotices mainnotices[]
}
